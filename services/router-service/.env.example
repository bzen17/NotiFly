# Redis: you can provide full URL as REDIS_URL, otherwise set parts below
# REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# Optional: password for Redis
REDIS_PASSWORD=

# Mongo: either provide a full URI (override) or separate parts below
# MONGO_URI=mongodb://root:example@localhost:27017/?authSource=admin
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=REDACTED
MONGO_PASS=REDACTED
MONGO_DB=notifly

# Postgres: prefer separate parts, or override with PG_CONNECTION
# PG_CONNECTION=postgresql://postgres:postgres@localhost:5432/notifly
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASS=REDACTED
PG_DB=notifly
CONSUMER_GROUP=router-group
CONSUMER_NAME=router-1
DEDUPE_TTL_SECONDS=86400
POLL_BLOCK_MS=5000
