# Delivery Adapters - local .env
# NOTE: This file is for local development. Do NOT commit real secrets to git.

# SendGrid configuration - set your real key when sending real emails
# If you have a key, set it here; otherwise leave blank for mock mode.
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_API_KEY
SENDGRID_FROM=REPLACE_WITH_SENDGRID_FROM_EMAIL

# AWS SES (if using SES via delivery-adapters)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_ACCESS_KEY
SES_FROM=no-reply@example.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=REPLACE_WITH_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_TWILIO_AUTH_TOKEN
TWILIO_FROM=REPLACE_WITH_TWILIO_FROM_NUMBER

# FCM (push)
FCM_SERVER_KEY=REPLACE_WITH_FCM_SERVER_KEY